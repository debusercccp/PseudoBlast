<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PseudoBLAST Web</title>

    <link rel="stylesheet" href="{{ url_for('static', filename='style.css') }}">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container py-5">
    
    <div class="text-center">
        <h1 class="main-title">PseudoBlast </h1>
        <p class="text-muted">Strumento di analisi e allineamento genomico locale</p>
    </div>

    {% if message %}
    <div class="alert alert-custom mb-4 text-center">
        {{ message }}
    </div>
    {% endif %}

    <div class="row g-4">

        <div class="col-lg-6">
            <div class="card h-100 p-4">
                <h2 class="section-title"> Cerca Sequenza (Query)</h2>
                
                <form method="POST">
                    <input type="hidden" name="action" value="search_seq">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Sequenza DNA</label>
                        <textarea name="sequence" class="form-control font-monospace" rows="3" placeholder="Es. ATGCGT..." required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Specie Target</label>
                        <select name="genome_single" class="form-select">
                            {% for s in specie %}
                            <option value="{{ s }}">{{ s }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="row g-2">
                        <div class="col-6">
                            <label class="form-label small text-muted">Min Score (Soglia)</label>
                            <input type="number" name="min_score" class="form-control" min="0" value="20">
                        </div>
                        <div class="col-6">
                            <label class="form-label small text-muted">K-mer (Indexing)</label>
                            <input type="number" name="k" class="form-control" min="2" value="10">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 mt-4">
                         Avvia Ricerca
                    </button>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card h-100 p-4">
		    <h2 class="section-title"> Confronta Genomi </h2>

                <form method="POST">
                    <input type="hidden" name="action" value="compare_genomes">

                    <div class="mb-3">
                        <label class="form-label fw-bold">Genoma A (Query)</label>
                        <select name="genome_1" class="form-select">
                            {% for s in specie %}
                            <option value="{{ s }}">{{ s }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Genoma B (Subject)</label>
                        <select name="genome_2" class="form-select">
                            {% for s in specie %}
                            <option value="{{ s }}">{{ s }}</option>
                            {% endfor %}
                        </select>
                    </div>

                    <div class="row g-2">
                         <div class="col-12">
                            <label class="form-label small text-muted">Min Score (Soglia)</label>
                            <input type="number" name="min_score" class="form-control" min="0" value="20">
                        </div>
                    </div>

                    <button type="submit" class="btn btn-danger w-100 mt-4">
                        Confronta Specie
                    </button>
                </form>
            </div>
        </div>

    </div>

    {% if results %}
    <div class="mt-5">
        <h2 class="section-title">Risultati Analisi (Top 50)</h2>

        {% for r in results %}
        <div class="result-box">
            <div class="result-header">
                <div>
                    {% if r.fileA %}
                        <strong>{{ r.fileA }}</strong> <span class="pos-badge">Pos {{ r.posA_start }}</span>
                        <span class="sep">â†”</span>
                        <strong>{{ r.fileB }}</strong> <span class="pos-badge">Pos {{ r.posB_start }}</span>
                    {% else %}
                        <strong>{{ r.header }}</strong>
                        <div class="text-muted small mt-1">File: {{ r.file }} <span class="pos-badge">Pos {{ r.pos_start }}</span></div>
                    {% endif %}
                </div>
                <span class="score-tag">Score: {{ r.score }}</span>
            </div>

            <div class="seq-container">
                <div class="seq-row">
                    <div class="seq-label">Q:</div>
                    <div class="seq">{{ r.q_aln }}</div>
                </div>
                <div class="seq-row">
                    <div class="seq-label">S:</div>
                    <div class="seq">{{ r.s_aln }}</div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

</div>

</body>
</html>
